def writeToFile (text = '') {
	sh "date > $text && cat $text"
}

def checkYear (file = '', year = '') {
	sh "cat $file | grep $year"
}

pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build') {
		writeToFile('file.txt')
	}
	stage('test') {
		checkYear('file.txt', '2022')
	}
    }
}
