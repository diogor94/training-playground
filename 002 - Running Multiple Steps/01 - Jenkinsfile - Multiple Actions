def writeToFile (text = '') {
	touch "$text"
	"echo date > $text"
	"cat $text"
}

pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('One'){
		steps {
			writeToFile('file.txt')
			sh 'sleep 10s'
			writeToFile('file.txt')
			sh 'sleep 10s'
			writeToFile('file.txt')
		}
	}
    }
}
